{% extends 'base.html.twig' %}

{% block title %}Deco{% endblock %}

{% block body %}
{{include('header2.html.twig')}}
<h1 class="animate-pulse font-bold text-4xl m-5 text-center">Formulaire de Modification de Produit</h1>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<div class="my-5 flex sm:w-5/6 md:w-3/6 font-sans bg-white m-auto bloc rounded-xl">
{{ form_start(form,{'attr': {'class': 'w-full'}})}}

<div class="px-4 py-2">{{form_row(form.Nom)}}</div>

<div class="px-4 py-2">{{form_row(form.marque)}}</div>
<div class="px-4 py-2">{{form_row(form.description)}}</div>
<div class="px-4 py-2">{{form_row(form.Prix)}}</div>
<div class="px-4 py-2">{{form_row(form.image)}}</div>

<div class="flex justify-center">{{form_row(form.save)}}</div>




{{ form_end(form) }}


</div>
<style>
    .bloc{
        box-shadow: rgba(136, 165, 191, 0.48) 6px 2px 16px 0px, rgba(255, 255, 255, 0.8) -6px -2px 16px 0px;
    }
    </style>
{% endblock %}
