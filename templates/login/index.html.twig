{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
{{include('homenav.html.twig')}}

{% if error%}
    <div class="text-4xl font-bold text-center text-red-500 error">{{error.messagekey|trans(error.messageData, 'security')}}</div>
{%endif %}





    

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
        <h3 class="text-2xl font-bold text-center">Login to your account</h3>
        <form action="{{path('app_login')}}" method="post">

            <div class="mt-4">
                <div>
                    <label for="username">Email</label>
    <input type="text" id="username" name="_username" value="{{last_username}}" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"/>
                   </div>
                <div class="mt-4">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="_password"  class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    
                  
                </div>
                <div class="flex items-baseline justify-between">
                    <button type="submit" class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">login</button>
                    
                </div>
            </div>
        </form>
    </div>
</div>



<style>
    @import url('https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@1,300&family=Open+Sans&family=Playfair+Display:wght@500&display=swap');

    .error{
        text-shadow: 1px 1px 2px red;
        font-family: 'Playfair Display', serif;   
    
    }

    </style>

{% endblock %}

